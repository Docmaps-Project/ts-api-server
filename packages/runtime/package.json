{
  "name": "@docmaps/ts-api-server/runtime",
  "version": "0.1.0",
  "description": "Node.js runtime for serving docmaps using other composed docmaps-related npm modules",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "test": "ava",
    "clean": "rm -rf dist/",
    "test:integration": "ava test/integration/",
    "test:unit": "ava test/unit/",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "prepare": "tsc --declaration",
    "build": "tsc"
  },
  "keywords": [],
  "author": "eve github.com/ships",
  "license": "ISC",
  "files": [
    "dist/",
    "README.md",
    "package.json",
    "tsconfig.json"
  ],
  "dependencies": {
    "@commander-js/extra-typings": "^10.0.3",
    "@rdfjs/types": "^1.1.0",
    "@tpluscode/sparql-builder": "^0.3.31",
    "commander": "^10.0.1",
    "crossref-openapi-client-ts": "^1.3.0",
    "docmaps-sdk": "^0.10.0",
    "fetch-sparql-endpoint": "^4.0.0",
    "fp-ts": "^2.14.0",
    "isomorphic-fetch": "^3.0.0",
    "oxigraph": "^0.3.19"
  },
  "devDependencies": {
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/node": "^18.16.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "ava": "^5.2.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^4.9.5"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ],
    "files": [
      "**/*.test.ts"
    ]
  }
}
